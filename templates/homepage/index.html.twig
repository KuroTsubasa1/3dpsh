{% extends 'layout.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block menu %}
    <div class="fixed text-[#23ce6b] bg-[#1A1D1A] left-0 top-0 z-50  min-h-[60px] min-w-full  lg:min-w-[20%] lg:min-h-screen drop-shadow-lg ">


        <div id="inner-menu" class="flex flex-wrap justify-center content-center min-w-full min-h-full lg:min-h-screen">

            <ul class="text-right ">
                <li class="hover:bg-[#272B27] hover:rounded-lg inline-block lg:block  lg:p-5 pl-5 pr-5 pt-2 pb-2 mt-2 lg:border-0">
                    <a href="/#welcome" class=" p-3 lg:p-5 w-full underline underline-offset-4 hover:underline-offset-8">WELCOME</a>
                </li>

                <li class="hover:bg-[#272B27] hover:rounded-lg inline-block lg:block underline underline-offset-4 hover:underline-offset-8 lg:p-5 pl-5 pr-5 pt-2 pb-2 mt-2 lg:border-0">
                    <a href="/#contact" class=" p-3 lg:p-5 min-w-[12rem]   ">Contact</a>
                </li>
            </ul>

        </div>


    </div>
{% endblock %}

{% block content %}

    <div id="content-wrapper" class="lg:ml-[20%] z-40">

        <div id="" class="text-[#23CE6B]">

            <section id="welcome"
                     class="flex flex-wrap justify-center content-center w-auto min-w-fit min-h-screen bg-[#272B27] border-b border-[#23ce6b]">

                <div id="headline-card"
                     class="text-center lg:text-right bg-[#1A1D1A] rounded p-[2.5%] m-[5%] w-full drop-shadow-md">
                    <h1 class="text-4xl lg:text-6xl mb-5 drop-shadow-md">
                        Welcome to <br> <strong class="mt-5">3D Print Shop HARM</strong>
                    </h1>
                    <small class="text-3xl drop-shadow-md">
                        3D printing is our <strong>EXPERTISE</strong> !
                    </small>
                </div>



                    <div id="" class=" bg-[#1A1D1A] rounded p-[2.5%] m-[5%] w-full ">

                            <div class="flex justify-left">
                                <div class="flex-row">
                                    <div class="flex-column">
                                        <p class="form-label inline-block mb-2 text-white font-medium text-2xl leading-tight">
                                            We offer the following services:
                                        </p>
                                    </div>
                                    <div class="flex-column mt-5">
                                        <p class="form-label inline-block mb-2 text-white font-medium text-md leading-tight">
                                            1. Printing of an already finished model
                                        </p>
                                    </div>
                                    <div class="flex-column">
                                        <p class="form-label inline-block mb-2 text-white font-medium text-md leading-tight">
                                            2. Research and assistance in finding / adjusting models.
                                        </p>
                                    </div>
                                    <div class="flex-column">
                                        <p class="form-label inline-block mb-2 text-white font-medium text-md leading-tight">
                                            3. Creation of new CAD models according to your ideas.
                                        </p>
                                    </div>
                                </div>

                            </div>
                    </div>





            </section>

            <section id="contact"
                     class="flex flex-wrap justify-center content-center w-auto min-h-screen bg-[#272B27] border-b border-[#23ce6b]">
                <div id="headline-card"
                     class="text-center lg:text-right bg-[#1A1D1A] rounded p-[2.5%] m-[5%] w-full drop-shadow-md">
                    <h1 class="text-4xl lg:text-6xl  drop-shadow-md">
                        <strong>Your request</strong>
                    </h1>
                </div>
                <div class="text-left w-full min-h-[50vh] bg-[#272B27] text-black">

                    <div id="contact-form" class=" bg-[#1A1D1A] rounded p-[2.5%] m-[5%]">
                        <form action="" method="post">

                            <div class="flex justify-left">
                                <div class="flex-row">
                                    <div class="flex-column">
                                        <p class="form-label inline-block mb-2 text-red-600 font-medium text-xs leading-tight uppercase">
                                            Important!
                                        </p>
                                    </div>
                                    <div class="flex-column">
                                        <p class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight">
                                            Please do not forget to include the link to the desired 3D in your request.

                                            If explicitly mentioned, you can also ask us to find a suitable model for
                                            you.
                                        </p>
                                    </div>
                                </div>

                            </div>

                            <div class="flex justify-center">
                                <div class="mb-3  w-full">
                                    <label for="first-name"
                                           class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">First
                                        name
                                    </label
                                    >
                                    <input
                                            type="text"
                                            class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                                            id="first-name"
                                            placeholder="Text input"
                                            name="first-name"
                                    />
                                </div>
                            </div>

                            <div class="flex justify-center">
                                <div class="mb-3  w-full">
                                    <label for="email"
                                           class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">Email
                                    </label
                                    >
                                    <input
                                            type="email"
                                            class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                                            id="email"
                                            placeholder="Email"
                                            name="email"
                                    />
                                </div>
                            </div>

                            <div class="flex justify-center">
                                <div class="mb-3  w-full">
                                    <label for="user-request"
                                           class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">Your
                                        request
                                    </label>
                                    <textarea
                                            class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                                            id="user-request"
                                            rows="3"
                                            placeholder="Your request"
                                            name="user-request"
                                    ></textarea>
                                </div>
                            </div>

                            <div class="flex justify-center">
                                <div class="mb-3  w-full">
                                    <input class="inline-block px-6 py-2.5 bg-[#272B27] text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-[#23CE6B] hover:shadow-lg focus:bg-[#23CE6B] focus:shadow-lg focus:outline-none focus:ring-0 active:bg-[#23CE6B] active:shadow-lg transition duration-150 ease-in-out"
                                           type="submit" value="Send request">
                                </div>
                            </div>

                        </form>
                    </div>


                </div>
            </section>

            <footer class="flex flex-wrap content-center w-full min-h-[15vh] bg-[#272B27] p-[5%] border-b border-[#23ce6b]">

                <div class="flex justify-center items-center lg:justify-between p-6">

                    <div class="mr-12 hidden lg:block">
                        <div class="mx-6 py-10 text-center md:text-left">
                            <div class="grid grid-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                                <div class="">
                                    <h6 class="
            uppercase
            font-semibold
            mb-4
            flex
            items-center
            justify-center
            md:justify-start
          "> Contact

                                    </h6>
                                    <p class="mb-4">
                                        <a href="mailto:service@3dps.space"
                                           class="text-gray-100 underline-offset-2 hover:text-[#23ce6b] hover:underline ">service@3dps.space</a>
                                    </p>
                                </div>
                                <div class="">
                                    <h6 class="
            uppercase
            font-semibold
            mb-4
            flex
            items-center
            justify-center
            md:justify-start
          "> Info

                                    </h6>
                                    <p class="mb-4">
                                        <a href="/legal"
                                           class="text-gray-100 underline-offset-2 hover:text-[#23ce6b] hover:underline ">Legal
                                            notice</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </footer>

        </div>

    </div>

{% endblock %}


