<form action="" method="post">

    <div id="contact-form-error" class="flex justify-left mb-5 {% if contact_form_status == "none" %}hidden{% endif %}">

        {% if contact_form_msg is defined %}
            {% for msg in contact_form_msg %}
                <p class="{% if contact_form_status == "error" %}text-red-600 border-red-600{% endif %}  {% if contact_form_status == "success" %}text-green-600 border-green-600{% endif %} leading-tight font-medium w-full p-2 rounded mb-2 border-2 text-xs">
                    {{ msg }}
                </p>
            {% endfor %}
        {% endif %}

    </div>

    <div class="flex justify-left">
        <div class="flex-row">
            <div class="flex-column">
                <p class="form-label inline-block mb-2 text-red-600 font-medium text-xs leading-tight uppercase">
                    Important!
                </p>
            </div>
            <div class="flex-column">
                <p class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight">
                    Please do not forget to include the link to the desired 3D in your request.

                    If explicitly mentioned, you can also ask us to find a suitable model for
                    you.
                </p>
            </div>
        </div>

    </div>

    <div class="flex justify-center">
        <div class="mb-3  w-full">
            <label for="first-name"
                   class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">First
                name
            </label
            >
            <input
                    type="text"
                    class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                    id="first-name"
                    placeholder="First name"
                    name="first-name"
                    required
            />
        </div>
    </div>

    <div class="flex justify-center">
        <div class="mb-3  w-full">
            <label for="email"
                   class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">Email
            </label
            >
            <input
                    type="email"
                    class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                    id="email"
                    placeholder="Email"
                    name="email"
                    required
            />
        </div>
    </div>

    <div class="flex justify-center">
        <div class="mb-3  w-full">
            <label for="user-request"
                   class="form-label inline-block mb-2 text-white font-medium text-xs leading-tight uppercase">Your
                request
            </label>
            <textarea
                    class="
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        font-medium text-xs leading-tight
        focus:text-black focus:bg-white focus:border-[#23ce6b] focus:outline-none
      "
                    id="user-request"
                    rows="3"
                    placeholder="Your request"
                    name="user-request"
                    required
            ></textarea>
        </div>
    </div>

    <div class="flex justify-left mb-3">
        <div class="g-recaptcha" data-sitekey="6Lf01VIgAAAAAEssDQT983hmH-AbPzxOogNkWe30"></div>
    </div>

    <div class="flex justify-center">
        <div class="mb-3  w-full">
            <input class="inline-block px-6 py-2.5 bg-[#272B27] text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-[#23CE6B] hover:shadow-lg focus:bg-[#23CE6B] focus:shadow-lg focus:outline-none focus:ring-0 active:bg-[#23CE6B] active:shadow-lg transition duration-150 ease-in-out"
                   type="submit" value="Send request">
        </div>
    </div>

</form>